@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>ViaKnockout</title>
    <script src="@Url.Content("~/Scripts/Knockout/knockout-3.4.0.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/underscore-min.js")"></script>
    <script src="@Url.Content("~/Scripts/Knockout/music.js")"></script>
</head>
<body>
<div data-bind="foreach: genres">
    <div>
        <input type="checkbox" data-bind="value: GenreID, checked: $root.genresFound">
        <span class="js-genres" data-bind="text: Genre"></span>
    </div>
</div>
<div>
    Performers: <select data-bind="options: performers, optionsText: 'Performer', optionsValue: 'PerformerID'"></select>
</div>
<div>
    Composers: <select data-bind="options: composers, optionsText: 'Composer', optionsValue: 'ComposerID'"></select>
</div>
<div>
    Albums: <select data-bind="options: albums, optionsText: 'Album', optionsValue: 'AlbumID'"></select>
</div>
<div>
    Casts: <select data-bind="options: casts, optionsText: 'Cast', optionsValue: 'CastID'"></select>
</div>
</body>
</html>